
<body>
	<div style='width: 800px;'>  
	  <div id="map" style='width: 800px; height: 400px;'></div>  
	</div>  


	<%= javascript_include_tag "//maps.google.com/maps/api/js?key="+ENV["GMAPS_TOKEN"] %>
	<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
	<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
	<script src='//cdn.jsdelivr.net/gmaps4rails/2.1.2/gmaps4rails.js'> </script>
	<script src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.js'> </script>
	<% building = BuildingsController.new %>
	<script type="text/javascript">  
	  handler = Gmaps.build('Google');  
	  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){  
	      	markers = handler.addMarkers(<%=raw building.load_buildingmarkers.to_json %>);  
	      	handler.bounds.extendWith(markers);  
	      	handler.fitMapToBounds();  
	  });  
	</script>
</body>